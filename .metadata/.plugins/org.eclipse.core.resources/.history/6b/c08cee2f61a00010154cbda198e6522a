package com.jsp.jdbccrud;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.util.Scanner;

public class PersonTryWithResource {

	public static void main(String[] args) {

		String url = "jdbc:postgresql://localhost:5432/personcrud";
		String user = "postgres";
		String password = "root";

		try (Connection con = DriverManager.getConnection(url, user, password); Scanner sc = new Scanner(System.in);) {

			String sql = "INSERT INTO person VALUES(?,?,?)";

			PreparedStatement st = con.prepareStatement(sql);

			System.out.print("ENTER ID : ");
			int id = sc.nextInt();
			sc.nextLine();
			System.out.print("ENTER name : ");
			String name = sc.nextLine();
			System.out.print("Enter age : ");
			int age = sc.nextInt();

			st.setInt(1, id);
			st.setString(2, name);
			st.setInt(3, age);
			
			st.execute();

		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}

}
